{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": "warn",
        "key-spacing": [
            "warn",
            {
                "align": "value"
            }
        ],
        "max-len": [
            "warn",
            {
                "code": 100
            }
        ],
        "no-unused-vars": "warn",
        "no-multi-spaces": "off",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "require-jsdoc": "off"
    }
}